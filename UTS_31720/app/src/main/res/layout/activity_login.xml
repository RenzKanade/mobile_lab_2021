<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/ActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AppLogo2"
        android:textColor="#2196F3"
        android:textAlignment="center"
        android:textSize="45dp"
        android:text="LOGIN\n MUSIC PLAYER"/>
    <ImageView
        android:id="@+id/AppLogo2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/ActivityTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/GroupInput"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:id="@+id/GroupInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AppLogo2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/LabelUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/EditUsername"
            android:textSize="20dp"
            android:textColor="#2196F3"
            android:text="Username"/>
        <EditText
            android:id="@+id/EditUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            app:layout_constraintTop_toBottomOf="@id/LabelUsername"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LabelPass"
            android:inputType="text"/>
        <TextView
            android:id="@+id/LabelPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20dp"
            android:textColor="#2196F3"
            android:text="Password"/>
        <EditText
            android:id="@+id/EditPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="textPassword"
            android:cursorVisible="true"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/GroupInput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="LOGIN" />

</androidx.constraintlayout.widget.ConstraintLayout>